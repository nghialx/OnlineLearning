@model IEnumerable<Source.Models.Cours>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<p>
    <a href="~/Cours/Create" class="btn btn-default">Open cource</a>
</p>

<h2>Available course</h2>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-sm-4 col-xs-12">
            <div class="x_panel tile fixed_height_320">
                <div class="x_title">
                    <h2>@Html.DisplayFor(modelItem => item.name)</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                            <ul class="dropdown-menu" role="menu">
                                <li>
                                    <a href="~/Cours/Details/@item.id">Detail</a>
                                </li>
                                <li>
                                    <a href="~/Cours/Edit/@item.id">Config</a>
                                </li>
                                <li>
                                    <a href="~/Topic/Edit/@item.id">Edit content</a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            @{
                                string id = "myModal" + item.id.ToString();
                                string targetid = "#" + id;
                            }

                            <!-- Trigger the modal with a button -->
                            <a data-toggle="modal" data-target=@targetid><i class="fa fa-close"></i></a>

                            <!-- Modal -->
                            <div class="modal fade" id=@id role="dialog">
                                <div class="modal-dialog">

                                    <!-- Modal content-->
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                                            <h4 class="modal-title">Confirmation</h4>
                                        </div>
                                        <div class="modal-body">
                                            <p>Are you sure to delete this cource?</p>
                                        </div>
                                        <div class="modal-footer">
                                            <a class="btn btn-danger" href="~/Cours/Delete/@item.id">OK</a>
                                            <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    @Html.Raw(item.desc)
                </div>
            </div>
        </div>
    }
</div>




